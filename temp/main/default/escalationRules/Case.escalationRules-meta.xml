<?xml version="1.0" encoding="UTF-8"?>
<EscalationRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <escalationRule>
        <fullName>7 days passed</fullName>
        <active>true</active>
        <ruleEntry>
            <businessHoursSource>None</businessHoursSource>
            <criteriaItems>
                <field>Case.Area__c</field>
                <operation>equals</operation>
                <value>AMER</value>
            </criteriaItems>
            <escalationAction>
                <minutesToEscalation>10080</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
                <notifyTo>mmatsumura@salesforce.comd</notifyTo>
                <notifyToTemplate>Customer_Service/SUPPORTCaseescalationnotificationSAMPLE</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
        </ruleEntry>
    </escalationRule>
</EscalationRules>
